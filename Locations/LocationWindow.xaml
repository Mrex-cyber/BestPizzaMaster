<Window x:Class="BestPizzaMaster.Locations.LocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestPizzaMaster.Locations"
        mc:Ignorable="d"
        Title="LocationWindow" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10 0 0 0" HorizontalAlignment="Center">
            <TextBlock FontSize="34" >Location title:</TextBlock>
            <TextBox x:Name="nameBox" FontSize="26" ></TextBox>
            
            <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                <Button Content="Save" Click="Save_Click" Margin="50 5" FontSize="18" ></Button>
                <Button Content="Cancel" Click="Cancel_Click" Margin="50 5" FontSize="18" ></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
